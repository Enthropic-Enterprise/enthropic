# --- Database ---
POSTGRES_USER=enthropic
POSTGRES_PASSWORD=super-strong-postgres-password-32-chars-min
POSTGRES_DB=enthropic
POSTGRES_MULTIPLE_DATABASES=auth_db,risk_db,trading_db

# --- Redis ---
REDIS_PASSWORD=super-strong-redis-password-32-chars-min

# --- NATS ---
NATS_USER=enthropic
NATS_PASSWORD=super-strong-nats-password-32-chars-min

# --- JWT ---
JWT_SECRET=your-very-long-random-jwt-secret-min-64-characters-here-change-in-production
JWT_EXPIRATION=24h

# --- Grafana (untuk development saja, ganti di produksi) ---
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change-this-in-production

# --- URLs untuk internal service (akan otomatis terisi) ---
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
NATS_URL=nats://${NATS_USER}:${NATS_PASSWORD}@nats:4222

# --- Market Simulator (production nanti diganti) ---
MARKET_SIMULATOR_ENABLED=true
MARKET_SIMULATOR_SYMBOLS=BTC/USD,ETH/USD,SOL/USD
